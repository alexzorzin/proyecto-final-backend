<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head") %>
        <%- include("../partials/scripts") %>
</head>

<body>
    <main class="page-wrapper bg-dark p-b-50">
        <div>
            <%- include("../partials/session") %>
        </div>
        <section class="wrapper wrapper--w790 pt-5">
            <% if(cart.length == 0)  { %>
                <div class="text-center text-white mt-4">
                    <h3>No hay productos en el Carrito</h3>
                    <a href="/home" class="btn bg-gra-01 border-dark rounded-pill mt-4 fw-bold">Ir a la Tienda</a>
                </div>
                <% }else { %>
            <div class="card card-5">
                <div class="card-heading">
					<h2 class="title">CART SUMMARY</h2>
				</div>
                <div class="card-body">
            <% for (const selectedProducts of cart) {%>
                <p>
                    <%=selectedProducts.cantidad%> x <%=selectedProducts.id%> - $<%=selectedProducts.price%> c/u
                </p>
                <%};%>
                    <h4>
                        TOTAL PRICE: $<%=totalPrice%>
                    </h4>
                    <form action="/api/cart/empty" method="post">
                        <input type="text" hidden="true" name="userId" />
                        <input type="button" class=" btn btn-danger fw-bold rounded-pill w-10" value="EMPTY CART" />
                    </form>
                </div>
                </div>
                <% }  %>
        </section>
    </main>
</body>

</html>